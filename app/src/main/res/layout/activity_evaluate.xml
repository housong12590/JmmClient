<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jmm.client.module.order.activity.EvaluateActivity">

    <com.jmm.client.widget.ToolBarLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:toolbar_has_default_back="true"
        app:toolbar_title_text="评价"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/evaluate_toolbar"
        android:layout_margin="10dp"
        android:background="@color/edit_bg"
        android:gravity="left"
        android:hint="请你谈谈本次交易的感受"
        android:minHeight="120dp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textColorHint="@color/edit_hint"
        android:textSize="14sp"
        />

    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/RadingStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:numStars="5"
        android:rating="2"
        android:stepSize="1.0"
        >
    </RatingBar>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom">

        <TextView
            android:id="@+id/evaluate_tv_issue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/ripple_but_red"
            android:gravity="center"
            android:padding="10dp"
            android:text="确认发布"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18"
            />
    </RelativeLayout>


</LinearLayout>
