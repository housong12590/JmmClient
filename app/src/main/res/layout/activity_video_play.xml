<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000"
    android:orientation="vertical">

    <com.jmm.client.widget.ToolBarLayout
        android:id="@+id/toolbar"
        app:toolbar_title_text="视频预览"
        android:layout_width="match_parent"
        app:toolbar_background="#000"
        app:toolbar_has_default_back="true"
        android:layout_height="wrap_content"/>


    <com.jmm.client.widget.SurfaceVideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="360dp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:progressDrawable="@drawable/progress_play_horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_affirm"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_play_button_bg"
            android:gravity="center"
            android:text="确认"
            android:textColor="#ffffff"
            android:textSize="18sp"/>

    </RelativeLayout>


</LinearLayout>
