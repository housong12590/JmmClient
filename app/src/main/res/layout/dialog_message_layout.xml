<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_dialog_bg"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:textColor="@color/black_26"
        android:textSize="@dimen/text_16"
        tools:text="提示"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:lineSpacingMultiplier="1.2"
        android:minHeight="50dp"
        android:textColor="@color/gray_66"
        android:textSize="@dimen/text_14"
        tools:text="sdfsdfsdfsdf"/>

    <View style="@style/divider_h"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/select_dialog_cancel_bg"
            android:gravity="center"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/text_14"
            tools:text="取消"/>

        <View
            style="@style/divider_h"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_affirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/select_dialog_affirm_bg"
            android:gravity="center"
            android:textColor="@color/yellow_ff"
            android:textSize="@dimen/text_14"
            tools:text="确认"/>

    </LinearLayout>


</LinearLayout>