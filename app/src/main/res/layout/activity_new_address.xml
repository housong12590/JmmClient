<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!--<include layout="@layout/base_toolbar"/>-->

    <com.jmm.client.widget.ToolBarLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:toolbar_has_default_back="true"
        app:toolbar_title_text="新建地址"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="收货人"
            android:textColor="@color/black_26"
            android:textSize="@dimen/text_14"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@null"
            android:textColor="@color/black_26"
            android:textSize="@dimen/text_14"
            tools:text="czlyj"/>

    </LinearLayout>

    <View style="@style/divider_h"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="联系电话"
            android:textColor="@color/black_26"
            android:textSize="@dimen/text_14"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@null"
            android:inputType="number"
            android:textColor="@color/black_26"
            android:textSize="@dimen/text_14"
            tools:text="13776601065"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="所在地区"
            android:textColor="@color/black_26"
            android:textSize="@dimen/text_14"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@null"
            android:drawablePadding="12dp"
            android:drawableRight="@drawable/icon_more_gray"
            android:gravity="right|center_vertical"
            android:paddingRight="12dp"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/text_14"
            tools:text="江苏省 南京市 鼓楼区"/>

    </LinearLayout>

    <View style="@style/divider_h"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@null"
        android:gravity="left|top"
        android:minHeight="80dp"
        android:padding="5dp"
        android:textColor="@color/black_26"
        android:textSize="@dimen/text_14"
        tools:text="sdfsdfsdfsdf"/>

    <View
        style="@style/divider_h"
        android:layout_height="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="设为默认地址"
            android:textColor="@color/black_26"
            android:textSize="@dimen/text_14"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"/>

    </LinearLayout>
</LinearLayout>
