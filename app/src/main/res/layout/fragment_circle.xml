<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/but_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缴纳保证金"
            />

        <Button
            android:id="@+id/but_evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评价"
            />

        <Button
            android:id="@+id/but_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="反馈和建议"
            />

        <Button
            android:id="@+id/but_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付中心"
            />

        <Button
            android:id="@+id/but_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退货"
            />

        <Button
            android:id="@+id/but_realname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实名认证"
            />

        <Button
            android:id="@+id/but_issue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            />

        <Button
            android:id="@+id/but_splash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="闪屏"
            />

        <Button
            android:id="@+id/but_pd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情"
            />

        <Button
            android:id="@+id/but_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址管理"/>

        <Button
            android:id="@+id/but_rs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"/>

        <Button
            android:id="@+id/but_returns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付密码"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/but_gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="黄金回购"/>
    </LinearLayout>

</LinearLayout>