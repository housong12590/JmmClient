                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/home_tv_auction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="特色拍卖"
                        android:textColor="@color/black_26"
                        android:textSize="@dimen/text_18"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/home_tv_auction"
                        android:layout_marginTop="10dp"
                        android:text="各种新鲜上线产品\n快来围观"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_launcher"
                        />
                </RelativeLayout>
            </LinearLayout>

            <View
                style="@style/divider_h"
                android:layout_height="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:tag="sticky">

                <android.support.design.widget.TabLayout
                    android:id="@+id/home_tablayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:tabIndicatorColor="@color/yellow_ff">
                </android.support.design.widget.TabLayout>

                <View
                    style="@style/divider_h"/>
            </LinearLayout>

            <com.jmm.client.widget.ChildViewPager
                android:id="@+id/home_viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.jmm.client.widget.ChildViewPager>
        </LinearLayout>

    </com.jmm.client.widget.StickyScrollViewList>
</LinearLayout>
