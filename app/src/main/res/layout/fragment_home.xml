<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jmm.client.module.main.fragment.HomeFragment">

    <com.jmm.client.widget.ToolBarLayout
        android:id="@+id/toolbar"
        app:toolbar_background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        app:toolbar_menu_text_color="#fff"
        app:toolbar_menu_text_size="10sp"
        android:layout_height="wrap_content"/>

    <com.jmm.client.widget.StickyScrollViewList
        android:id="@+id/home_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <com.jmm.client.widget.banner.MZBannerView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:canLoop="true"
                app:open_mz_mode="true"
                />

            <LinearLayout
                android:id="@+id/home_ll_single"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableBottom="@mipmap/ic_launcher"
                    android:gravity="center"
                    android:text="单品回购\n回购能挣钱"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableBottom="@mipmap/ic_launcher"
                    android:gravity="center"
                    android:text="单品回购\n回购能挣钱"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableBottom="@mipmap/ic_launcher"
                    android:gravity="center"
                    android:text="单品回购\n回购能挣钱"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableBottom="@mipmap/ic_launcher"
                    android:gravity="center"
                    android:text="单品回购\n回购能挣钱"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableBottom="@mipmap/ic_launcher"
                    android:gravity="center"
                    android:text="单品回购\n回购能挣钱"/>
            </LinearLayout>

            <View
                style="@style/divider_h"
                android:layout_height="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/home_tv_auction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="特色拍卖"
                        android:textColor="@color/black_26"
                        android:textSize="@dimen/text_18"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/home_tv_auction"
                        android:layout_marginTop="10dp"
                        android:text="各种新鲜上线产品\n快来围观"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_launcher"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/home_tv_auction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="特色拍卖"
                        android:textColor="@color/black_26"
                        android:textSize="@dimen/text_18"
                        />

