<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.jmm.client.widget.ToolBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:toolbar_title_text="确认订单"
        app:toolbar_has_default_back="true">
    </com.jmm.client.widget.ToolBarLayout>

    <LinearLayout
        android:id="@+id/ll_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="60dp"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_consignee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14"
                    tools:text="收货人 : 小明"/>


                <TextView
                    android:id="@+id/tv_phone_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14"
                    tools:text="13776601064"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/icon_address"/>

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请添加收货地址"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14"/>

            </LinearLayout>


        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_more_gray"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_separator"/>


    <View
        style="@style/divider_h"
        android:layout_height="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/iv_pro_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pro_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14"
                tools:text="包装非常完好,东西非常精美的投资币包装非常完好,东西非常精美的投资币"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="名称: 后面纪念币 重量: 50g 材质: Ag"
                android:textColor="@color/edit_hint"
                android:textSize="@dimen/text_12"
                />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:textColor="@color/red"
                android:textSize="@dimen/text_18"
                tools:text="¥ 600.00"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="正品保证，优先同城面交"
                android:textColor="@color/edit_hint"
                android:textSize="@dimen/text_12"
                />
        </LinearLayout>

    </LinearLayout>

    <View style="@style/divider_h"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="订单号：157732664654"
        android:textSize="@dimen/text_16"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="订单日期：2017-08-04"
        android:textSize="@dimen/text_16"
        />

    <View
        style="@style/divider_h"
        android:layout_height="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="商品总额"
            android:textSize="@dimen/text_14"/>

        <TextView
            android:id="@+id/tv_manage_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="12dp"
            android:drawablePadding="10dp"
            android:gravity="right"
            android:textColor="@color/red"
            android:textSize="@dimen/text_16"
            tools:text="¥：600.00"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="+运费"
            android:textSize="@dimen/text_14"/>

        <TextView
            android:id="@+id/tv_manage_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="12dp"
            android:drawablePadding="10dp"
            android:gravity="right"
            android:textColor="@color/red"
            android:textSize="@dimen/text_16"
            tools:text="¥：10.00"/>
    </LinearLayout>

    <View style="@style/divider_h"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="right"
            android:text="需付款"
            android:textSize="@dimen/text_14"/>

        <TextView
            android:id="@+id/tv_manage_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:gravity="right"
            android:textColor="@color/red"
            android:textSize="@dimen/text_18"
            tools:text="¥：610.00"/>
    </LinearLayout>


    <View
        style="@style/divider_h"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实付款："
            android:textColor="@color/red"
            android:textSize="@dimen/text_16"/>


        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text=" ¥610.00"
            android:textColor="@color/red"
            android:textSize="@dimen/text_18"/>

        <TextView
            android:id="@+id/tv_commit_order"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0.5dp"
            android:background="@color/red"
            android:gravity="center"
            android:text="立即下单"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16"/>

    </LinearLayout>

</LinearLayout>
